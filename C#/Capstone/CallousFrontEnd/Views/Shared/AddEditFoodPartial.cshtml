@model CallousFrontEnd.Models.FoodKitchen
@using (Html.BeginForm("AddEditFood", "User", FormMethod.Post))

{
    @Html.HiddenFor(x => x.KitchenId)
    @Html.HiddenFor(x => x.Food.Id)
    @Html.HiddenFor(x => x.Food.OnShoppingList)

    @Html.HiddenFor(x => x.Food.Traces)
    @Html.HiddenFor(x => x.Food.Ingredients)

    <div class="form-group">
        @Html.LabelFor(x => x.Food.Name)
        @Html.TextBoxFor(x => x.Food.Name, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Food.Quantity)
        @Html.TextBoxFor(x => x.Food.Quantity, htmlAttributes: new { @class = "form-control", @type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Food.ExpiryDate)
        @Html.TextBoxFor(x => x.Food.ExpiryDate, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @type = "date" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Food.QuantityClassifier, "Quantity Classifier")
        @Html.DropDownListFor(x => x.Food.QuantityClassifier, new SelectList(ViewBag.Classifier), htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Food.Storage, "Storage")
        @Html.DropDownListFor(x => x.Food.Storage, new SelectList(ViewBag.StorageTypesList), new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @*
        Sets up the dropdwon if the food is being edited    
    *@
    @if (Model.Food.Id == 0)
    {

        <div class="form-group">
            @Html.LabelFor(x => x.Food.Vegetarian, "Vegetarian")
            @Html.DropDownListFor(x => x.Food.Vegetarian, new SelectList(ViewBag.VegVegan, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Food.Vegan, "Vegan")
            @Html.DropDownListFor(x => x.Food.Vegan, new SelectList(ViewBag.VegVegan, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(x => x.Food.Favourite)
        @Html.CheckBoxFor(x => x.Food.Favourite, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @if (Model.Food.Id == 0)
    {
        <button type="submit" class="btn btn-primary">Add Food</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Edit Food</button>
    }
}
