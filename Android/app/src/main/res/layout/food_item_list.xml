<?xml version="1.0" encoding="utf-8"?>
<!--Author: Laura Stewart -->
<LinearLayout
    android:id="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:paddingHorizontal="8dp"
    android:orientation="horizontal"
    android:background="?attr/bgColorLight">

    <LinearLayout
        android:id="@+id/innerLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:paddingVertical="5dp"
        android:paddingHorizontal="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/bgColorLight">

        <TextView
            android:id="@+id/textViewFoodTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="?attr/textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewFoodQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="?attr/textColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="?attr/textColor"
            android:textSize="14sp" />

    </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">


        <ImageButton
            android:id="@+id/imgBtnEditFood"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="0"
            android:backgroundTint="?attr/bgColorLight"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit" />

        <ImageButton
            android:id="@+id/imgBtnEatFood"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="1"
            android:backgroundTint="?attr/bgColorLight"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/food" />

        <ImageButton
            android:id="@+id/imgBtnDeleteFood"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="?attr/bgColorLight"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/delete" />

        <ImageButton
            android:id="@+id/imgBtnFavourite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_column="1"
            android:backgroundTint="?attr/bgColorLight"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/star" />
    </GridLayout>


</LinearLayout>